<div class="custom-section">
  <h2 class="custom-section__title">{{ section.settings.section_title }}</h2>
  <div class="custom-section__content">
    <img src="{{ section.settings.section_image | img_url: 'medium' }}" alt="Custom Section Image" class="custom-section__image">
    <p class="custom-section__description">{{ section.settings.section_description }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Custom Section",
  "settings": [
    {
      "type": "text",
      "label": "Section Title",
      "id": "section_title",
      "default": "Welcome to Our Store"
    },
    {
      "type": "image_picker",
      "label": "Section Image",
      "id": "section_image",
      "default": "https://example.com/default-image.jpg"
    },
    {
      "type": "textarea",
      "label": "Section Description",
      "id": "section_description",
      "default": "This is a custom section description."
    }
  ],
  "presets":[
    {
        "name": "Custom Section",
        "category":"Custom Section"
    }
  ]
}
{% endschema %}



{% style %}
  .custom-section {
    text-align: center;
    padding: 40px 20px;
  }
  .custom-section__title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
  }
  .custom-section__image {
    max-width: 100%;
    height: auto;
    margin-bottom: 20px;
  }
  .custom-section__description {
    font-size: 16px;
    color: #666;
  }
{% endstyle %}
